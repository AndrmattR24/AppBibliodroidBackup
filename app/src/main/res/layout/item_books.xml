<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/gray01"
    app:cardCornerRadius="15dp"
    android:layout_margin="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_fontPage"
            android:layout_width="200dp"
            android:layout_height="300dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_bookTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_margin="5dp"
                    android:text="Sipnosis :"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_gravity=""
                    android:id="@+id/iv_btnFavorito"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:background="#000f"
                    android:src="@drawable/icon_heart_broken" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_sipnosis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="15sp" />

        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>