<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.UserProfileActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/img_backgroundapp">

    <ImageView
        android:id="@+id/userProfile"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_launcher_foreground"
        android:background="@drawable/shape_custom_profile"/>

    <ImageButton
        android:id="@+id/changeProfile"
        android:layout_marginTop="-85dp"
        android:layout_marginLeft="80dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_camara"
        android:background="#000f"
        android:tooltipText="Change Profile Image"
        />

    <LinearLayout
        android:layout_marginTop="60dp"
        android:padding="10dp"
        android:gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username : "
            android:textSize="18sp"/>

        <EditText
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matti"
            android:editable="false"
            android:background="#000f"/>

    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password : "
            android:textSize="18sp"/>


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000f"
            android:editable="false"
            android:inputType="textPassword"
            android:text="Matti"
            android:textSize="18sp" />

    </LinearLayout>


</LinearLayout>